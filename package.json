{
  "name": "webamp-desktop",
  "version": "0.3.0",
  "description": "Desktop version of Winamp 2.9 reimplementation in HTML5 and JS",
  "main": "main.js",
  "scripts": {
    "start": "yarn run build && electron .",
    "watch": "webpack --watch",
    "build": "webpack",
    "electron": "./node_modules/.bin/electron .",
    "test": "jest",
    "pack": "yarn run pack:win && yarn run pack:linux && yarn run pack:mac",
    "pack:win": "build -w --x64",
    "pack:linux": "build -l --x64",
    "pack:mac": "build -m --x64",
    "dist": "yarn run build && build --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "homepage": "https://github.com/durasj/webamp-desktop",
  "repository": "https://github.com/durasj/webamp-desktop",
  "author": "Jakub Duras <jakub@duras.me>",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "spotify-web-api-node": "^5.0.2",
    "dotenv": "^16.3.1",
    "html-to-text": "^9.0.5",
    "left-clicky": "0.1.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "electron": "https://github.com/castlabs/electron-releases#v33.0.0+wvcus",
    "electron-builder": "^24.9.1",
    "electron-debug": "^3.2.0",
    "eslint": "^8.53.0",
    "fs-extra": "^11.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "spectron": "^19.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webamp": "^1.5.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "browserslist": [
    "Chrome 118"
  ],
  "build": {
    "appId": "me.duras.webamp-desktop",
    "productName": "Webamp desktop",
    "copyright": "Copyright © 2018 Jakub Ďuraš",
    "files": [
      "!.*${/*}",
      "!src/*.*",
      "!artifacts${/*}",
      "!docs${/*}",
      "!bundled${/*}"
    ],
    "directories": {
      "buildResources": "res",
      "output": "artifacts"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": "default"
    },
    "win": {
      "target": "nsis-web",
      "certificateSubjectName": "castLabs GmbH",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "signingHashAlgorithms": ["sha256"]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    },
    "publish": {
      "provider": "github",
      "owner": "durasj",
      "releaseType": "draft"
    },
    "afterPack": "./build/afterPack.js",
    "afterSign": "./build/afterSign.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*(\\.|/)spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
